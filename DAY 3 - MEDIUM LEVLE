#include <bits/stdc++.h>
using namespace std;

int main() {
	int t;
    cin >> t;

    while (t--) {
        int n, x;
        cin >> n >> x;

        // Check if the parity of n and x is the same
        if ((n % 2) == (x % 2)) {
            // Check if x is less than or equal to n
            if (x <= n) {
                cout << "YES" << endl;
            } else {
                cout << "NO" << endl;
            }
        } else {
            cout << "NO" << endl;
        }
    }

    return 0;


}
