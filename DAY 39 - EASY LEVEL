#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
int T;
    cin >> T;  

    while (T--) {
        int A, B, C;
        cin >> A >> B >> C;  
        
        int totalCost = A + B + C - min({A, B, C});
        
        cout << totalCost << endl;  
    }

    return 0;
}
