#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int T; 
    cin >> T;

    while (T--) {
        int N, X;
        cin >> N >> X;

        
        int subscriptions = ceil(N / 6.0);
        int totalCost = subscriptions * X;
        cout << totalCost << endl;
    }
    return 0;

}
